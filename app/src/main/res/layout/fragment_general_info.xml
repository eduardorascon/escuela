<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp"
    tools:context="layout.GeneralInfo">

    <RelativeLayout
        android:id="@+id/average_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_average"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/image_border"
            android:padding="1dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_average"
            android:paddingLeft="20dp"
            android:text="PROMEDIO"
            android:textAlignment="textStart"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:textStyle="" />

        <TextView
            android:id="@+id/average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView8"
            android:layout_toRightOf="@id/icon_average"
            android:paddingLeft="20dp"
            android:text="85.5"
            android:textAlignment="textStart"
            android:textColor="@color/secondary_text"
            android:textSize="60sp"
            android:textStyle="" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/abcense_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_abcense"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/image_border"
            android:padding="1dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon_abcense"
            android:paddingLeft="20dp"
            android:text="FALTAS"
            android:textAlignment="textStart"
            android:textColor="@color/secondary_text"
            android:textSize="14sp"
            android:textStyle="" />

        <TextView
            android:id="@+id/abcense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:layout_toRightOf="@+id/icon_abcense"
            android:paddingLeft="20dp"
            android:text="2"
            android:textAlignment="textStart"
            android:textColor="@color/secondary_text"
            android:textSize="60sp"
            android:textStyle="" />

    </RelativeLayout>

</LinearLayout>